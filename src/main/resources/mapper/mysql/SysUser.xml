<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qs.dao.base.SysUserDao">

    <select id="findOne" parameterType="java.lang.Long" resultType="SysUser">
        SELECT oid, userName
        FROM User
        WHERE oid = #{oid}
    </select>

    <select id="findByUserName" parameterType="java.lang.String" resultType="SysUser">
        SELECT oid, userName
        FROM User
        WHERE userName like '%'+#{userName}+'%'
    </select>

    <select id="findAll" resultType="SysUser">
        SELECT oid, userName FROM User
    </select>

</mapper>